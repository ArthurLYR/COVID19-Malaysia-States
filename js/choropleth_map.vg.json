{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Active Cases in Malaysia",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "../data/malaysia_states.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_ocean"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#c1f8ff",
                "stroke": "#c1f8ff",
                "strokeWidth": 1
            }
        },
        {
            "data": {
                "url": "../data/malaysia_states.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_graticules_5"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "../data/malaysia_states.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#f0f0f0",
                "stroke": "#f0f0f0",
                "strokeWidth": 1
            }
        },
        {
            "data": {
                "url": "../data/malaysia_states.json",
                "format": {
                    "type": "topojson",
                    "feature": "gadm41_MYS_1"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME_1",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/MoH-Malaysia/covid19-public/main/epidemic/cases_state.csv"
                        },
                        "key": "state",
                        "fields": [
                            "date",
                            "cases_active"
                        ]
                    }
                },
                {
                    "lookup": "properties.NAME_1",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/MoH-Malaysia/covid19-public/main/static/population.csv"
                        },
                        "key": "state",
                        "fields": [
                            "pop"
                        ]
                    }
                },
                {
                    "calculate": "(abs(datum.cases_active) + 0.1) / datum.pop * 10000",
                    "as": "cases_active_10000"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#f0f0f0",
                "strokeWidth": 1
            },
            "encoding": {
                "color": {
                    "field": "cases_active_10000",
                    "type": "quantitative",
                    "title": "Active Cases (per 10000 population)",
                    "scale": {
                        "scheme": "reds",
                        "type": "log"
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME_1",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "date",
                        "type": "ordinal",
                        "title": "Date"
                    },
                    {
                        "field": "cases_active_10000",
                        "type": "quantitative",
                        "title": "Active Cases (per 10000 population)",
                        "format": ".2f"
                    }
                ]
            }
        }
    ]
}